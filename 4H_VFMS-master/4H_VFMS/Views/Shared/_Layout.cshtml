@using _4H_VFMS.Utilities 

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 4H VFMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/MyStyles/4hVFMS.css" rel="stylesheet" />
    <link href="~/fonts/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top bg-success">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
                @Html.ActionLink("4H VFMS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class='@Html.IsActive("tblUserLists", "Index")'>@Html.ActionLink("Users", "Index", "tblUserLists")</li>
                    <li class='@Html.IsActive("tblDriverLists", "Index")'>@Html.ActionLink("Drivers", "Index", "tblDriverLists")</li>
                    <li class='@Html.IsActive("tblVehicleLists", "Index")'>@Html.ActionLink("Vehicles", "Index", "tblVehicleLists")</li>
                    <li class='@Html.IsActive("tblVehicleAssignments", "Index")'>@Html.ActionLink("Vehicle Assignment", "Index", "tblVehicleAssignments")</li>                    
                    <li class='@Html.IsActive("Reports", "Index")'>@Html.ActionLink("Reports", "Index", "Reports")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        @{
            //if user is not login they will get redirect to login page
            //Better to use in layout page
            if (Session["userID"] == null)
            {
                Response.Redirect("~/Login/Index");
            }
        }

        <footer id="footer" class="navbar navbar-default navbar-fixed-bottom">
            <p>Copyright &copy; @DateTime.Now.Year - 4H Vehicle Fleet Management System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/MyScripts/ModalScript.js"></script>
</body>
</html>
