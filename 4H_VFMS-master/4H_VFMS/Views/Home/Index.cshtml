@{ 
    ViewBag.title = "Dashboard";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Images/slide1.jpeg" alt="Slide1">
        </div>

        <div class="item">
            <img src="~/Images/slide2.jpeg" alt="Slide2">
        </div>

        <div class="item">
            <img src="~/Images/slide3.jpeg" alt="Slide3">
        </div>

        <div class="item">
            <img src="~/Images/slide4.jpeg" alt="Slide4">
        </div>

        <div class="item">
            <img src="~/Images/slide5.jpeg" alt="Slide5">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row" style="padding-bottom:50px">
    <div class="col-md-3" style="border-color: rgb(181,178,178);padding: 0px;">
        <div class="text-center" style="margin: 15px;border-style: solid;border-color: rgb(195,195,195);border-top-color: rgb(51,;border-right-color: 51,;border-bottom-color: 51);border-left-color: 51,;padding: 20px;">
            <i class="fa fa-user text-success" style="font-size: 180px;"></i>
